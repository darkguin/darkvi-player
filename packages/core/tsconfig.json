{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext","DOM"],
    "baseUrl": "./",
//    "paths": {
//      "@/*": ["src/*"],
//    }
  },
  "include": ["vite.config.ts","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/api/player.d.ts"],
  "exclude": ["node_modules", "dist"]
}
